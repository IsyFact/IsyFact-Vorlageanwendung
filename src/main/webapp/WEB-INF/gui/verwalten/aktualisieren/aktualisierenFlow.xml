<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd" parent="applikationseiteParentFlow">

	<var name="aktualisierenModel" 
		class="de.bund.bva.isyfact.terminfindung.gui.terminfindung.verwalten.aktualisieren.AktualisierenModel"/>

	<!-- Die Terminfindung wird aus dem Parent Flow Ã¼bergeben -->
	<input name="terminfindung" type="de.bund.bva.isyfact.terminfindung.gui.terminfindung.model.TerminfindungModel"/>
	
	<!-- Initialisiere das Modell-->	
	<on-start>
		<evaluate expression="aktualisierenModel.setTerminfindung(terminfindung)"/>
	</on-start>

	<view-state id="aktualisierenViewState" >
		<transition on="cancel" to="finished"/>
		<transition on="save" to="validate"/>
	</view-state>
	
	<decision-state id="validate">
		<if test="aktualisierenController.aktualisiereTerminfindung(aktualisierenModel)" then="finished"
			else="aktualisierenViewState" />
	</decision-state>
	
	<end-state id="finished">
        <output name="aktualisierenTerminfindung" value="aktualisierenModel.getTerminfindung()"/>
    </end-state>
</flow>
